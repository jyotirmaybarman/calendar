    "target": "ESNext",
    "declaration": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/esm",
  },
  "include": [
